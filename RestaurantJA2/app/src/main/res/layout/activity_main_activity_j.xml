<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.facci.restaurantja.MainActivityJA"
    android:orientation="vertical"
    android:background="#ffffff"
    android:transitionGroup="false"
    android:backgroundTint="#ffffff"
    android:backgroundTintMode="src_over"
    android:baselineAligned="false"
    android:focusable="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:text="Restaurant  JA"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tituloo"
        android:autoText="true"
        android:textColor="@color/accent_material_light"
        android:textColorHighlight="#ffffff" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="4"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="415dp"
            android:layout_height="133dp"
            android:id="@+id/img1"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:src="@drawable/imagen1"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="Click1"/>
        <ImageButton
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/img2"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/imagen2"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="Click2"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/img3"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/imagen3"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="Click3"/>
        <ImageButton
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/img4"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/imagen4"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="Click4"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/img5"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/imagen5"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="Click5"/>
        <ImageButton
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/img6"
            android:layout_row="3"
            android:layout_column="0"
            android:src="@drawable/imagen6"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="Click6"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/img7"
            android:layout_row="3"
            android:layout_column="1"
            android:src="@drawable/imagen7"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
            android:onClick="Click7"/>

    </GridLayout>
</LinearLayout>
